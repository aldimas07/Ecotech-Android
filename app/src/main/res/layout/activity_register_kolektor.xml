<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ecotech_logo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ecotech_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/buatakunsebagai"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/kolektor"
                android:textColor="?colorAccent"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/user_nama_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfield_bg"
            android:hint="Nama Perusahaan / Perseorangan"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <EditText
            android:id="@+id/edt_email_register_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfield_bg"
            android:hint="Email"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <EditText
            android:id="@+id/edt_alamat_register_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfield_bg"
            android:hint="Alamat"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <EditText
            android:id="@+id/edt_nohp_register_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfield_bg"
            android:hint="Nomor HP"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:inputType="phone"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <EditText
            android:id="@+id/edt_password_register_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfield_bg"
            android:hint="Password"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <EditText
            android:id="@+id/confirm_password_kolektor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfield_bg"
            android:hint="Konfirmasi Password"
            android:importantForAutofill="yes"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister_kolektor"
            style="@style/ButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:stateListAnimator="@null"
            android:text="@string/daftaronregister"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="?colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sudahpunyaakun"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/masuk"
                android:textColor="?colorAccent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>